<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yizhen.shop.auction.MyAuctionHomeActivity">

    <com.yizhen.shop.widgets.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_text="我的拍卖"/>

    <LinearLayout
        android:onClick="get_auction_ing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的参拍"
            android:textColor="@color/gray01"
            android:textSize="15sp"/>

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_right"/>
    </LinearLayout>

    <LinearLayout
        android:onClick="get_auction_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的获拍"
            android:textColor="@color/gray01"
            android:textSize="15sp"/>

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_right"/>
    </LinearLayout>

    <LinearLayout
        android:onClick="get_auction_margin_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的保证金"
            android:textColor="@color/gray01"
            android:textSize="15sp"/>

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_right"/>
    </LinearLayout>
</LinearLayout>
