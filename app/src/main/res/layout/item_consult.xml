<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <View
        android:id="@+id/tv_consult_right"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_right"/>

    <View
        android:id="@+id/wen"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/ic_wen"/>

    <TextView
        android:id="@+id/tv_wen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_consult_right"
        android:layout_toRightOf="@id/wen"
        android:textSize="12sp"/>

    <View
        android:id="@+id/da"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_below="@id/tv_wen"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_da"/>

    <TextView
        android:id="@+id/tv_da"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wen"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/tv_consult_right"
        android:layout_toRightOf="@id/da"
        android:textSize="12sp"/>
</RelativeLayout>