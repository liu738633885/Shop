<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yizhen.shop.order.AddNewOrderActivity">

    <com.yizhen.shop.widgets.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_text="填写订单"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line1"/>

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="合计:"
            android:textColor="@color/gray01"
            android:textSize="@dimen/midTextSize"/>

        <TextView
            android:id="@+id/tv_all_price_bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="¥ 0.00"
            android:textColor="@color/super_red"
            android:textSize="@dimen/midTextSize"/>

        <Button
            android:id="@+id/add_order"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_bg"
            android:enabled="true"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="@dimen/midTextSize"/>
    </LinearLayout>

</LinearLayout>
